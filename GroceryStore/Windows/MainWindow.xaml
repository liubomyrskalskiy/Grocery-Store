                                           Storyboard.TargetName="ProductManagementMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="{Binding Height, ElementName=ProductManagementMenu}" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)"
                                           Storyboard.TargetName="ProductManagementMenuCloseBtn">
                <EasingDoubleKeyFrame KeyTime="0" Value="{Binding Width, ElementName=ProductManagementMenuCloseBtn}" />
