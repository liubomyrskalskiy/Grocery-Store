        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderBrush" Value="White" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderBrush" Value="White" />
                </Style>
            </Style.Resources>
        </Style>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="LogOutBtn">
            <BeginStoryboard Storyboard="{StaticResource LogInMenuOpen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="StoreManagementMenuOpenBtn">
            <BeginStoryboard Storyboard="{StaticResource StoreMenuOpen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ProductManagementMenuOpenBtn">
            <BeginStoryboard Storyboard="{StaticResource ProductMenuOpen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="StaffManagementMenuOpenBtn">
            <BeginStoryboard Storyboard="{StaticResource StaffMenuOpen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="OtherManagementMenuOpenBtn">
            <BeginStoryboard Storyboard="{StaticResource OtherMenuOpen}" />
        </EventTrigger>

        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="StoreManagementMenuCloseBtn">
            <BeginStoryboard Storyboard="{StaticResource StoreMenuClose}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ProductManagementMenuCloseBtn">
            <BeginStoryboard Storyboard="{StaticResource ProductMenuClose}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="StaffManagementMenuCloseBtn">
            <BeginStoryboard Storyboard="{StaticResource StaffMenuClose}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="OtherManagementMenuCloseBtn">
            <BeginStoryboard Storyboard="{StaticResource OtherMenuClose}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/src/background.png" />
        </Grid.Background>
        <Frame x:Name="Main" Margin="0,0,0,0" NavigationUIVisibility="Hidden" />

        <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 50, 50,0" Width="700">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label x:Name="RoleLabel" Content="" Foreground="White" Margin="0,0,10,0" FontSize="20"
                           VerticalAlignment="Top" FontFamily="Comic Sans MS" />
                    <Label x:Name="NameLabel" Content="" Foreground="White" Margin="10,0,0,0" FontSize="20"
                           VerticalAlignment="Top" FontFamily="Comic Sans MS" />
                </StackPanel>

                <Label x:Name="MarketLabel" Content="" Foreground="White" FontSize="20" VerticalAlignment="Top"
                       FontFamily="Comic Sans MS" />
            </StackPanel>
            <Button x:Name="LogOutBtn" Margin="0,0,5,0" HorizontalAlignment="Right" Width="120" Height="40"
                    BorderBrush="{x:Null}" Padding="0" Content="Log Out" Background="#FFD18143"
                    Foreground="#FFFFFFFF" FontFamily="Comic Sans MS" Click="LogOutBtn_OnClick">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                      Direction="-90"
                                      Color="Black"
                                      Opacity="0.5"
                                      BlurRadius="20" />
                </Button.Effect>
            </Button>
        </Grid>

        <Grid x:Name="LogInGridMenu" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Height="280">
            <Border CornerRadius="0,0,20,20">
                <Border.Background>
                    <ImageBrush ImageSource="/src/small_menu_background.png" Stretch="None" />
                </Border.Background>
            </Border>
            <StackPanel Margin="10,40,10,40" VerticalAlignment="Stretch">
                <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Login</Label>

                <TextBox x:Name="LoginTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top"
                         FontSize="20" FontFamily="Consolas" MaxLines="1" TextAlignment="Left"
                         VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White"
                         CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20" />
                    </TextBox.Effect>
                </TextBox>

                <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Password</Label>

                <PasswordBox x:Name="PasswordTextBox" Foreground="White" Padding="5,0,0,0" Height="40"
                             VerticalAlignment="Top" FontSize="20" FontFamily="Consolas"
                             VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White"
                             CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                    <PasswordBox.Effect>
                        <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20" />
                    </PasswordBox.Effect>
                </PasswordBox>

                <Button x:Name="LogInBtn" Margin="0,20,0,0" HorizontalAlignment="Center" Width="120" Height="40"
                        BorderBrush="{x:Null}" Padding="0" Content="Log In" Background="#FF393D47"
                        Foreground="#FFFFFFFF" FontFamily="Comic Sans MS" Click="LogInBtn_OnClick">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="4"
                                          Direction="-90"
                                          Color="Black"
                                          Opacity="0.5"
                                          BlurRadius="20" />
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="AppGridMenu" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" Margin="50,0,0,0">
            <Border CornerRadius="0,0,20,20">
                <Border.Background>
                    <ImageBrush ImageSource="/src/main_menu_background.png" Stretch="None" />
                </Border.Background>
            </Border>

            <ListView ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,0,0,20" VerticalAlignment="Stretch">
                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                    <Button x:Name="SaleBtn" Height="40" Background="{x:Null}" BorderBrush="{x:Null}"
                            Padding="0" Margin="0" Content="Sale" HorizontalAlignment="Stretch"
                            Width="400" FontFamily="Comic Sans MS" Click="SaleBtn_Click" />
                </ListViewItem>

                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                    <StackPanel>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="400">
                            <Button x:Name="StoreManagementMenuOpenBtn" Height="40" Background="{x:Null}"
                                    BorderBrush="{x:Null}" Padding="0" Margin="0" Content="Stores management"
                                    HorizontalAlignment="Stretch" FontFamily="Comic Sans MS" />

                            <Button x:Name="StoreManagementMenuCloseBtn" VerticalAlignment="Stretch"
                                    HorizontalAlignment="Right" Width="0" Height="40" Background="{x:Null}"
                                    BorderBrush="{x:Null}" Padding="0">
                                <materialDesign:PackIcon Foreground="#ffffff" Kind="KeyboardArrowUp" Width="30"
                                                         Height="30" />
                            </Button>
                        </Grid>

                        <Grid x:Name="StoreManagementMenu" Background="#33FFFFFF" Height="0">
                            <ListView ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0"
                                      VerticalAlignment="Stretch">
                                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                                    <Button x:Name="MarketBtn" Height="40" Background="{x:Null}" BorderBrush="{x:Null}"
                                            Padding="0" Margin="0" Content="Stores" HorizontalAlignment="Stretch"
                                            Width="400" FontFamily="Comic Sans MS" Click="MarketBtn_Click" />
                                </ListViewItem>

                                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                                    <Button x:Name="MarketLessBtn" Height="40" Background="{x:Null}"
                                            BorderBrush="{x:Null}" Padding="0" Margin="0" Content="Stores"
                                            HorizontalAlignment="Stretch" Width="400" FontFamily="Comic Sans MS"
                                            Click="MarketLessBtn_Click" />
                                </ListViewItem>

                                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                                    <Button x:Name="GoodsInMarketBtn" Height="40" Background="{x:Null}"
                                            BorderBrush="{x:Null}" Padding="0" Margin="0" Content="Goods in stores"
                                            HorizontalAlignment="Stretch" Width="400" FontFamily="Comic Sans MS"
                                            Click="GoodsInMarketBtn_Click" />
                                </ListViewItem>

                                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                                    <Button x:Name="GoodsInMarketLessBtn" Height="40" Background="{x:Null}"
                                            BorderBrush="{x:Null}" Padding="0" Margin="0" Content="Goods in stores"
                                            HorizontalAlignment="Stretch" Width="400" FontFamily="Comic Sans MS"
                                            Click="GoodsInMarketLessBtn_Click" />
                                </ListViewItem>

                                <ListViewItem HorizontalContentAlignment="Center" Padding="0">
                                    <Button x:Name="GoodsInMarketOwnBtn" Height="40" Background="{x:Null}"
