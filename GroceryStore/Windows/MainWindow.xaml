                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="40" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                           Storyboard.TargetName="StoreManagementMenu">
