<Page x:Class="GroceryStore.Views.GoodsWriteOffOwnPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" Height="1080" Width="1920">

    <Page.Resources>
        <Style x:Key="ColumnHeaderStyle1" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Padding" Value="10, 0, 50, 0"/>
            <Setter Property='HorizontalContentAlignment' Value="Left"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="RoundedCornersBtn">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent">
        <Grid Margin="0,300,50,0">
            <Border CornerRadius="0,20,0,0" >
                <Border.Background>
                    <ImageBrush ImageSource="../src/category_grid_background.png"  Stretch="None"></ImageBrush>
                </Border.Background>
            </Border>
            <DataGrid Margin="0, 0, 850 ,0" Name="DataGrid" FontFamily="Consolas" AutoGenerateColumns="False" ItemsSource="{Binding Path=GoodsWriteOffOwnDtos}" HorizontalGridLinesBrush="White" Foreground="White" Background="Transparent" 
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle1}" IsReadOnly="True" SelectionChanged="DataGrid_OnSelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Good" Binding="{Binding Path=GoodTitle}"/>
                    <DataGridTextColumn Header="Product Code" Binding="{Binding Path=ProductCode}"/>
                    <DataGridTextColumn Header="Production Code" Binding="{Binding Path=ProductionCode}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Path=Amount}"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding Path=Reason}"/>
                    <DataGridTextColumn Header="Login" Binding="{Binding Path=Login}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid x:Name="AppGridMenu" VerticalAlignment="Center" HorizontalAlignment="Right" Width="800">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="750">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Production Code</Label>

                        <TextBox x:Name="ProductionCodeTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top" FontSize="20" FontFamily="Consolas" MaxLines="1" TextAlignment="Left" VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White" CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20"/>
                            </TextBox.Effect>
                        </TextBox>

                        <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Date</Label>

                        <TextBox x:Name="DateTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top" FontSize="20" FontFamily="Consolas" VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White" CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20"/>
                            </TextBox.Effect>
                        </TextBox>

                        <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Amount</Label>

                        <TextBox x:Name="AmountTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top" FontSize="20" FontFamily="Consolas" VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White" CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20"/>
                            </TextBox.Effect>
                        </TextBox>

                        <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Employee Login</Label>

                        <TextBox x:Name="LoginTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top" FontSize="20" FontFamily="Consolas" VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White" CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20"/>
                            </TextBox.Effect>
                        </TextBox>

                        <Label Foreground="White" FontSize="15" VerticalAlignment="Top" FontFamily="Comic Sans MS">Reason</Label>

                        <TextBox x:Name="ReasonTextBox" Foreground="White" Padding="5,0,0,0" Height="40" VerticalAlignment="Top" FontSize="20" FontFamily="Consolas" VerticalContentAlignment="Center" SelectionBrush="White" SelectionTextBrush="White" CaretBrush="White" BorderBrush="White" BorderThickness="2" Background="#26FFFFFF">
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="4" Direction="-90" Color="Black" Opacity="0.5" BlurRadius="20"/>
                            </TextBox.Effect>
                        </TextBox>

                        <Button x:Name="CreateBtn" 
                                        Margin="0,10,0,0" 
                                        HorizontalAlignment="Stretch" 
                                        Height="40" 
                                        BorderBrush="{x:Null}" 
                                        Padding="0" 
                                        Content="Create" 
                                        Background="#FF393D47" 
                                        Foreground="#FFFFFFFF" 
                                        FontFamily="Comic Sans MS"
                                        Click="CreateBtn_OnClick">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="4"
                                          Direction="-90"
                                          Color="Black"
                                          Opacity="0.5"
                                          BlurRadius="20"/>
                            </Button.Effect>
                        </Button>

                        <Button x:Name="UpdateBtn" 
                                        Margin="0,10,0,0" 
                                        HorizontalAlignment="Stretch" 
                                        Height="40" 
                                        BorderBrush="{x:Null}" 
                                        Padding="0" 
                                        Content="Update" 
                                        Background="#FF393D47" 
                                        Foreground="#FFFFFFFF" 
                                        FontFamily="Comic Sans MS"
                                        Click="UpdateBtn_OnClick">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="4"
                                                          Direction="-90"
                                                          Color="Black"
                                                          Opacity="0.5"
                                                          BlurRadius="20"/>
                            </Button.Effect>
                        </Button>

                        <Button x:Name="DeleteBtn" 
                                        Margin="0,10,0,0" 
                                        HorizontalAlignment="Stretch" 
                                        Height="40" 
                                        BorderBrush="{x:Null}" 
                                        Padding="0" 
                                        Content="Delete" 
                                        Background="#FF393D47" 
                                        Foreground="#FFFFFFFF" 
                                        FontFamily="Comic Sans MS"
                                        Click="DeleteBtn_OnClick">
                            <Button.Effect>
                                <DropShadowEffect ShadowDepth="4"
                                                          Direction="-90"
                                                          Color="Black"
                                                          Opacity="0.5"
                                                          BlurRadius="20"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
